{
  "id": "com.smartthings",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Samsung SmartThings"
  },
  "description": {
    "en": "Adds support for Samsung SmartThings sensors"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Anders Thorsen",
    "email": "anders@anders.to"
  },
  "drivers": [
    {
      "id": "motionv5",
      "name": {
        "en": "Motion Sensor (2016)"
      },
      "class": "sensor",
      "capabilities": [
        "measure_battery",
        "alarm_battery",
        "alarm_motion",
        "measure_temperature"
      ],
      "zigbee": {
        "manufacturerName": "SmartThings",
        "productId": [
          "motionv5"
        ],
        "deviceId": 1026,
        "profileId": 260
      },
      "images": {
        "large": "/drivers/motionv5/assets/images/large.png",
        "small": "/drivers/motionv5/assets/images/small.png"
      }
    },
    {
      "id": "multiv4",
      "name": {
        "en": "Multipurpose Sensor"
      },
      "class": "homealarm",
      "capabilities": [
        "measure_battery",
        "alarm_battery",
        "alarm_contact",
        "measure_temperature"
      ],
      "zigbee": {
        "manufacturerName": "SmartThings",
        "productId": [
          "multiv4"
        ],
        "deviceId": 1026,
        "profileId": 260
      },
      "images": {
        "large": "/drivers/multiv4/assets/images/large.png",
        "small": "/drivers/multiv4/assets/images/small.png"
      }
    }
  ]
}